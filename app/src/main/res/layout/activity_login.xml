<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C10A7E"
    tools:context=".login">

    <TextView
        android:id="@+id/tvl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="97dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Bienvenidos a CoFilm"
        android:textColor="#FEFEFE"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="center"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:textColorHint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvl1" />

    <EditText
        android:id="@+id/etContrase単a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="49dp"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="center"
        android:hint="Contrase単a"
        android:inputType="textPersonName"
        android:textColorHint="#FEFEFE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsuario" />

    <Button
        android:id="@+id/btnAyuda"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="179dp"
        android:backgroundTint="#FEFEFE"
        android:text="Ayuda"
        android:textColor="#040303"
        app:icon="@android:drawable/ic_menu_help"
        app:iconGravity="start"
        app:iconTint="#070606"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etContrase単a" />

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="182dp"
        android:backgroundTint="#FEFEFE"
        android:text="Ingresar"
        android:textColor="#040303"
        app:icon="@android:drawable/presence_video_away"
        app:iconTint="#090808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etContrase単a" />
</androidx.constraintlayout.widget.ConstraintLayout>